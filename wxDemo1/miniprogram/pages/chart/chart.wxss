@import "./chart.skeleton.wxss";
.chart-nav{
  background-color: #FEDB5B;
  padding: 20rpx;
}
.condition{
  width: 160rpx;
  height: 60rpx;
  background-color: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
  color: #444;
}

.search-box{
  width: calc(100% - 240rpx);
  background-color: #fff;
  height: 60rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  padding: 0 30rpx;
}

.picker-box{
  width: 100%;
  height: 60rpx;
  color: #444;
  line-height: 60rpx;
  font-size: 28rpx;
}

.tabs{
  background-color: #fff;
}

.tab-item{
  width: 50%;
  height: 120rpx;
  position: relative;
}

.tab-item-content{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  padding: 10rpx 20rpx;
  text-align: center;
  border-radius: 20rpx;
}

.tab-item-content.active{
  background-color: rgba(254, 219, 91, .35);
}

.tab-title{
  font-size: 24rpx;
  color: #444;
}

.tab-price{
  font-weight: bold;
  font-size: 28rpx;
}

.shouru{
  color: #e4393c;
}

.zhichu{
  color: #00B26A;
}

.canvas-box{
  margin-top: 20rpx;
  height: 600rpx;
  background-color: #fff;
}

.img-icon{
  width: 80rpx;
  height: 80rpx;
  background-color: #ddd;
  border-radius: 50%;
  overflow: hidden;
}

.arrow{
  width: 32rpx;
  height: 32rpx;
  margin-top: 24rpx;
}

.type-item{
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e8e8e8;
}

.type-item:last-child{
  border-bottom: none;
}

.type-content{
  width: calc(100% - 152rpx);
  height: 80rpx;
  margin: 0 20rpx;
}

.type-box{
  margin-top: 20rpx;
}

.type-text{
  height: 40rpx;
  line-height: 40rpx;
}

.type-progress{
  height: 40rpx;
}

.t-title{
  font-size: 28rpx;
  color: #444;
}

.t-price{
  
  font-size: 28rpx;
  font-weight: bold;
}

.t-price-shouru{
  color: #e4393c;
}

.t-price-zhichu{
  color: #00B26A;
}

.count{
  width: 160rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

.progress{
  width: calc(100% - 160rpx);
  background-color: #e8e8e8;
  margin-top: 10rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.progress-active{
  width: 0;
  height: 20rpx;
  transition: width .2s linear;
}

.arrow-img{
  height: 20rpx;
}

.icon-box{
  height: 80rpx;
}

.canvas-box{
  width: 100%;
  height: 300px;
}
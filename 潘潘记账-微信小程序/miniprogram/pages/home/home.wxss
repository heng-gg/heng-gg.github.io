@import "./home.skeleton.wxss";

.home-box{
  background-color: #FEDB5B;
  padding: 40rpx;
}

.jieyu{
  color: #444;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.jieyu-money{
  font-weight: bold;
  color: #444;
}

.int{
  font-size: 36rpx;
}

.decimal{
  font-size: 28rpx;
  /* line-height: 72.5rpx; */
}

.jieyu-box{
  width: 240rpx;
  height: 240rpx;
  margin: 0 auto;
  border-radius: 50%;
  position: relative;
  box-shadow: 0 0 0 10rpx rgba(255, 255, 255, .35);
}
.jy{
  position: absolute;
  transform: translate(-50%, -50%);
  left: 50%;
  top: 50%;
  text-align: center;
}

.sz{
  margin-top: 60rpx;
}

.shouru-money{
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 20rpx;
  color: #444;
}

.by{
  color: #444;
  font-size: 32rpx;
}

.zhichu{
  margin-top: 40rpx;
}

.text-box{
  color: #444;
  line-height: 80rpx;
  font-size: 28rpx;
}

.text-shouru{
  margin: 0 20rpx;
}

.box{
  background-color: #fff;
  padding: 0 20rpx;
}

.point{
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #aaa;
  margin: 36rpx 4rpx 0;
}

.point-box{
  height: 80rpx;
  position: relative;
}

.picker-box{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  opacity: 0;
}

.list-item{
  padding: 20rpx;
  background-color: #fff;
}

.img-box{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #ddd;

}

.list-text{
  width: calc(100% - 100rpx);
  height: 80rpx;
  padding-left: 20rpx;
  border-bottom: 1rpx solid #e8e8e8;
  padding-bottom: 20rpx;
}

.type-title{
  color: #444;
  font-size: 28rpx;
}

.account{
  color: #999;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.title-info{
 line-height: 40rpx;
}

.comment{
  color: #999;
  font-size: 24rpx;
  line-height: 40rpx;
}

.price{
  line-height: 80rpx;
  font-weight: bold;
}

.p-shouru{
  color: #e4393c;
}

.p-zhichu{
  color: #00B26A;
}

.not-comment{
  line-height: 80rpx;
}

.img-icon{
  height: 80rpx;
}